<div class="ui card">
  <div class="content">
    <h3 class="center aligned header"><%= title %><sup>NEW</sup></h3>
    <div class="center aligned description"><%= yield %></div>
  </div>
  <div class="extra content">
    <div class="center aligned">
      <%= link_to(t('homepage.merchandise.link_title'), path, class: "ui button primary") %>
    </div>
  </div>
</div>
<style>
  h3 {
  position: relative;
}

sup {
  position: absolute;
  top: 5px;
  color: #ff0000;
  font-size: 10px;
  animation: blink 1s steps(1, end) infinite;
}

  @keyframes blink {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
