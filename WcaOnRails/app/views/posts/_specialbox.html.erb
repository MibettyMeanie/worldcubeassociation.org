<div class="ui card">
  <div class="content">
    <h3 class="center aligned header"><%= title %></h3>
    <div class="center aligned description"><%= yield %></div>
  </div>
  <div class="extra content">
    <div class="center aligned">
      <%= link_to(t('Link to shop'), path, class: "ui button primary") %>
    </div>
  </div>
</div>
<style>
  .blink {
    animation: blink 1s steps(1, end) infinite;
  }

  @keyframes blink {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
